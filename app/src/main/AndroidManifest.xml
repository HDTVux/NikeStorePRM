<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logoapp"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.NikeStore"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".func.OrderDetailActivity"
            android:exported="false" />
        <activity
            android:name=".func.OrderHistoryActivity"
            android:exported="false" />
        <activity
            android:name=".func.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".func.CheckoutActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- scheme và host giống server redirect -->
                <data
                    android:host="vnpay-return"
                    android:scheme="app" />
            </intent-filter>
        </activity>
        <activity
            android:name=".func.BaseActivity"
            android:exported="false" />
        <activity
            android:name=".func.CartActivity"
            android:exported="false" />
        <activity
            android:name=".func.ProductDetailActivity"
            android:exported="false" />
        <activity
            android:name=".func.CategoryProductsActivity"
            android:exported="false" />
        <activity
            android:name=".func.ResetPasswordActivity"
            android:exported="false" />
        <activity
            android:name=".func.VerifyOtpActivity"
            android:exported="false" />
        <activity
            android:name=".func.HomePage"
            android:exported="true" />
        <activity
            android:name=".func.ForgotPassword"
            android:exported="false" />
        <activity
            android:name=".func.Register"
            android:exported="false" />
        <activity
            android:name=".func.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
        <activity
            android:name="com.vux.store.func.ReviewOrderActivity"
            android:exported="false" />
        <activity
            android:name="com.vux.store.func.ProfileActivity"
            android:exported="false" />
        <!-- Declare WishlistActivity -->
        <activity
            android:name="com.vux.store.func.WishlistActivity"
            android:exported="false" />

        <!-- Declare VnPayWebViewActivity -->
        <activity
            android:name=".func.VnPayWebViewActivity"
            android:exported="false"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:windowSoftInputMode="adjustResize" />

        <!-- Declare SmartSuggestionActivity -->
        <activity
            android:name=".func.SmartSuggestionActivity"
            android:exported="false" />

        <!-- NEW: Declare ChatActivity -->
        <activity
            android:name="com.vux.store.func.ChatActivity"
            android:exported="false" />

    </application>

</manifest>