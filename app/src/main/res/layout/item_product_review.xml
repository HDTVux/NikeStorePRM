<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <TextView
            android:id="@+id/tvProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Nike ZoomX Vaporfly Next (Men)" />

        <TextView
            android:id="@+id/tvProductQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Số lượng: 1"
            android:textSize="14sp"
            tools:text="Số lượng: 1" />

        <LinearLayout
            android:id="@+id/layoutReviewInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <RatingBar
                android:id="@+id/ratingBarProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                style="?android:attr/ratingBarStyle" />

            <EditText
                android:id="@+id/edtComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:hint="Bình luận của bạn"
                tools:text="Sản phẩm tuyệt vời!" />

            <Button
                android:id="@+id/btnSubmitReview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:text="Gửi đánh giá" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvReviewStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Đã đánh giá (4 sao): 'Sản phẩm tuyệt vời!'"
            android:textSize="14sp"
            android:textColor="@android:color/holo_green_dark"
            android:visibility="gone"
            tools:text="Đã đánh giá (4 sao): 'Sản phẩm tuyệt vời!'" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
