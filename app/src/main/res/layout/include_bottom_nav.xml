<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottomNavContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:paddingBottom="8dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp">

    <!-- Background bar -->
    <View
        android:id="@+id/bottomBarBg"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="16dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bottom_bar_bg" />

    <!-- Icons row -->
    <LinearLayout
        android:id="@+id/navRow"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <!-- left two icons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_home"
                android:tint="#9AA0A6"
                android:contentDescription="@string/home" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnFavourite"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_favorite"
                android:tint="#9AA0A6"
                android:contentDescription="@string/favourites" />
        </LinearLayout>

        <!-- spacer for center FAB -->
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- right two icons -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnNotifications"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_notifications"
                android:tint="#9AA0A6"
                android:contentDescription="@string/notifications" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/btnProfile"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_person"
                android:tint="#9AA0A6"
                android:contentDescription="@string/profile" />
        </LinearLayout>
    </LinearLayout>

    <!-- Center Floating Cart button (overlapping) -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingBottom="36dp"> <!-- adjusts overlap distance -->

        <ImageButton
            android:id="@+id/fabCart"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:background="@drawable/fab_circle_bg"
            android:src="@drawable/ic_shopping_bag"
            android:contentDescription="@string/cart"
            android:scaleType="centerInside" />

        <!-- badge count -->
        <TextView
            android:id="@+id/tvCartBadge"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center|top"
            android:translationX="36dp"
            android:translationY="-10dp"
            android:gravity="center"
            android:text="0"
            android:textSize="10sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/badge_bg"
            android:visibility="gone" />
    </FrameLayout>

</FrameLayout>
