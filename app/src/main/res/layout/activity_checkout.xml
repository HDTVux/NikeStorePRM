<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/checkout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Checkout"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Checkout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCartItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        tools:listitem="@layout/item_cart" />

    <TextView
        android:id="@+id/tvSubtotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:text="Subtotal: $0.00"
        tools:text="Subtotal: $250.00" />

    <TextView
        android:id="@+id/tvShipping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shipping: $0.00"
        tools:text="Shipping: $10.00" />

    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total: $0.00"
        android:textStyle="bold"
        tools:text="Total: $260.00" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:text="Shipping method" />

    <RadioGroup
        android:id="@+id/rgShipping"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbCod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash on Delivery" />

        <RadioButton
            android:id="@+id/rbVnpay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pay with VNPay" />
    </RadioGroup>

    <EditText
        android:id="@+id/edtAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Shipping address"
        android:paddingTop="8dp"
        android:visibility="visible"
        tools:text="123 Main St, Anytown, USA" />
        
    <EditText
        android:id="@+id/edtPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Phone number"
        android:inputType="phone"
        android:paddingTop="8dp"
        tools:text="(555) 123-4567" />

    <Button
        android:id="@+id/btnPay"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/primary"
        android:text="Pay"
        android:textColor="@color/white" />
</LinearLayout>