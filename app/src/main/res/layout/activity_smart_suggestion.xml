<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".func.SmartSuggestionActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hỏi AI về sản phẩm" 
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/edtUserQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ví dụ: Tìm giày chạy bộ màu đen size 42"
        android:minHeight="48dp"
        android:padding="8dp"
        android:background="@drawable/bg_banner_rounded"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:gravity="top"/>

    <Button
        android:id="@+id/btnGetSuggestions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gợi ý sản phẩm"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white"
        android:background="@color/black"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvSuggestions"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:background="@drawable/bg_banner_rounded"
        android:scrollbars="vertical"
        android:text="Các gợi ý sẽ hiển thị ở đây..."
        android:textColor="@android:color/black"
        android:textSize="16sp"/>

</LinearLayout>
