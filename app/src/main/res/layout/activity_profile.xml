<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".func.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Default Avatar -->
        <ImageView
            android:id="@+id/ivProfileAvatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_person" 
            app:tint="@color/white"
            android:contentDescription="Profile Avatar" />

        <!-- Email (Read-only) -->
        <TextView
            android:id="@+id/tvProfileEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Email:"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvProfileEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="user@example.com" />

        <!-- Username (Editable) -->
        <TextView
            android:id="@+id/tvProfileUsernameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Tên người dùng:"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etProfileUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:hint="Nhập tên người dùng"
            android:inputType="textPersonName"
            android:maxLines="1"
            tools:text="johndoe" />

        <!-- Address (Editable) -->
        <TextView
            android:id="@+id/tvProfileAddressLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Địa chỉ:"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etProfileAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:hint="Nhập địa chỉ của bạn"
            android:inputType="textPostalAddress"
            android:maxLines="2"
            tools:text="123 Main St, New York, USA" />

        <!-- Gender (RadioGroup) -->
        <TextView
            android:id="@+id/tvProfileGenderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Giới tính:"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <RadioGroup
            android:id="@+id/rgProfileGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rbGenderMale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nam"
                android:textColor="@color/white"
                android:buttonTint="@color/white" />

            <RadioButton
                android:id="@+id/rbGenderFemale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Nữ"
                android:textColor="@color/white"
                android:buttonTint="@color/white" />

            <RadioButton
                android:id="@+id/rbGenderOther"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Khác"
                android:textColor="@color/white"
                android:buttonTint="@color/white" />
        </RadioGroup>

        <!-- Created At (Read-only) -->
        <TextView
            android:id="@+id/tvProfileCreatedAtLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ngày tạo tài khoản:"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvProfileCreatedAt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            tools:text="2025-10-03 17:43:16" />

        <!-- Change Password Button -->
        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Đổi mật khẩu"
            android:backgroundTint="@color/design_default_color_secondary" />

        <!-- Update Information Button -->
        <Button
            android:id="@+id/btnUpdateProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Cập nhật thông tin"
            android:backgroundTint="@color/design_default_color_primary" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Đăng xuất"
            android:backgroundTint="@color/red_error_color" />

    </LinearLayout>

</ScrollView>
